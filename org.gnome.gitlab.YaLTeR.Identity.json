{
    "app-id" : "org.gnome.gitlab.YaLTeR.Identity",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "42",
    "sdk" : "org.gnome.Sdk",
    "sdk-extensions" : [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "add-extensions": {
        "org.freedesktop.Platform.ffmpeg-full": {
            "directory": "lib/ffmpeg",
            "version": "21.08",
            "add-ld-path": "."
        }
    },
    "cleanup-commands": [
        "mkdir -p ${FLATPAK_DEST}/lib/ffmpeg"
    ],
    "cleanup" : [
        "/bin/blueprint-compiler",
        "/lib/pkgconfig"
    ],
    "command" : "identity",
    "finish-args" : [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri"
    ],
    "build-options" : {
        "append-path" : "/usr/lib/sdk/rust-stable/bin"
    },
    "modules" : [
        {
            "name" : "blueprint",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/jwestman/blueprint-compiler.git",
                    "commit" : "cd12c9442354c4e071d565d913bd239990fb383d"
                }
            ]
        },
        {
            "name" : "identity",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://gitlab.gnome.org/YaLTeR/identity/uploads/b1043bddacd945c6f148eef908aadf3b/identity-0.3.0.tar.xz",
                    "sha256" : "6c99bdebf98aca0bf4292f98757ac46f31ec2a85d33a14dcf19f0ea715a61f56"
                }
            ]
        }
    ]
}

