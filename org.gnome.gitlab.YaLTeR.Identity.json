{
    "app-id" : "org.gnome.gitlab.YaLTeR.Identity",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "40",
    "sdk" : "org.gnome.Sdk",
    "sdk-extensions" : [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "add-extensions": {
        "org.freedesktop.Platform.ffmpeg-full": {
            "directory": "lib/ffmpeg",
            "version": "20.08",
            "add-ld-path": "."
        }
    },
    "cleanup-commands": [
        "mkdir -p ${FLATPAK_DEST}/lib/ffmpeg"
    ],
    "command" : "identity",
    "finish-args" : [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri"
    ],
    "build-options" : {
        "append-path" : "/usr/lib/sdk/rust-stable/bin"
    },
    "modules" : [
        {
            "name" : "identity",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://gitlab.gnome.org/YaLTeR/identity/uploads/bd04a5221794606c2d4a5a7b26df399c/identity-0.1.3.tar.xz",
                    "sha256" : "0303b9a3d92f0202b1761650f32c2336d1bb303ceb416ea95f2317ded602c14d"
                }
            ]
        }
    ]
}

